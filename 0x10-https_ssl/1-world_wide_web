#!/bin/bash
# This script review subdomains
print_text(){

  dig "$1.$2" | grep -A1 'ANSWER SECTION:' | awk -v subdomains="$1" 'FNR == 2 { print "The subdomain " subdomains " is a " $4 " record and points to " $5 }'
}

array=("www" "lb-01" "web-01" "web-02")

if [ $# -eq 2 ]
then
  print_text "$2" "$1"
else
  for i in "${array[@]}"
  do
    print_text "$i" "$1"
  done
fi
